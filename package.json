{
  "name": "mini-thermostat-card",
  "version": "1.0.0",
  "type": "module",
  "description": "Lovelace mini-thermostat-card",
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "automation",
    "lovelace",
    "custom-cards",
    "thermostat"
  ],
  "module": "mini-thermostat-card.js",
  "repository": "git@github.com:mazsol/mini-thermostat-card.git",
  "author": "Zsolt NÃ©medi-Varga <zsolt@nemedi-varga.com>",
  "license": "MIT",
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "debounce-fn": "^6.0.0",
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "release-it": "^19.0.6",
    "rimraf": "^6.1.0",
    "rollup": "^4.53.2",
    "rollup-plugin-serve": "^3.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "release-it": {
    "hooks": {
      "after:bump": [
        "npm run build",
        "echo After bump"
      ],
      "after:release": "echo Successfully created a release v${version} for ${repo.repository}."
    },
    "git": {
      "commitMessage": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "assets": [
        "dist/mini-thermostat-card.js"
      ]
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            }
          ]
        }
      },
      "@release-it/bumper": {
        "out": {
          "file": "src/const.ts",
          "type": "text/plain"
        }
      }
    }
  },
  "resolutions": {},
  "scripts": {
    "start": "rollup -c --watch",
    "build": "npm run clean && npm run lint && npm run rollup",
    "clean": "rimraf dist",
    "lint": "eslint src/*.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "rollup": "rollup -c",
    "prepare": "husky",
    "release": "release-it"
  }
}
